@model ERP_ZORZAL.Models.tbListaPrecio
@using ERP_ZORZAL.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Listado Precio</h2>
    </div>






    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","ListaPrecios")">Regresar</a>
			@*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary"})*@
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Listado Precio</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
              
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)


                        <div class="form-group">
                            @Html.LabelFor(model => model.listp_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.listp_Id)
                                @Html.ValidationMessageFor(model => model.listp_Id)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Nombre Lista</label>
                        @*@Html.LabelFor(model => model.listp_EsActivo, new { @class = "control-label col-md-2" })*@
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.listp_Nombre)
                            @Html.ValidationMessageFor(model => model.listp_Nombre)
                        </div>

                        <br /><br />
                                <div class="form-group">
                                    @Html.LabelFor(model => model.listp_EsActivo, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @*@Html.EditorFor(model => model.listp_EsActivo)*@

                                        @Html.CheckBox("listp_EsActivo", true)
                                        @Html.ValidationMessageFor(model => model.listp_EsActivo)
                                        <span class="validation-error">  @Html.ValidationMessageFor(model => model.listp_EsActivo)</span>
                                    </div>
                                </div>
                            </div>
              


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })

                            </div>
                        </div>

                        }
                        @Html.Partial("_CreateListaPrecioDetalle")


                    </div>
            </div>
        </div>
    </div>
</div>
 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
