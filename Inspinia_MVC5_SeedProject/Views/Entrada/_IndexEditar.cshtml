                        <div class="col-md-12 text-center">
                            <a href="@Url.Action("Edit","Entrada")" class="btn btn-primary">Guardar</a>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

