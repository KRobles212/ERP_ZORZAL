@model IEnumerable<ERP_GMEDINA.Models.tbEntradaDetalle>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Entrada Detalle</h5>
					<div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ModalAgregar">Nuevo</button>
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-responsive" style="width:100%" id="tbEntradaDetalle">
                        <thead>
                            <tr>
                                <th>
                                    Código Producto
                                </th>
                                <th>
                                    Nombre Producto
                                </th>
                                <th>
                                    Unidad Medida
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbProducto.prod_Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbProducto.prod_Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tbProducto.tbUnidadMedida.uni_Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.entd_Cantidad)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalEditar">Editar</button>
                                    <button type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalDetalle">Detalles</button>
                                </td>
                            </tr>
                            }

                        </tbody>
</table>

                </div>
            </div>
           
        </div>
    </div>
 </div>


<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbEntradaDetalle').DataTable(
        {
            

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                
                "sLengthMenu": "Mostrar _MENU_ registros por página",
                "sInfo": "Mostrando _START_ a _END_ Entradas",
            }
        });
    });
</script>

 @*Modal Nuevo*@ 
