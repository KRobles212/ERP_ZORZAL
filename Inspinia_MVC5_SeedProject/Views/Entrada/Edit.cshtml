@*para el estado levante el modal del drop*@

@*cuando el estado esta activo*@
<script>
    $('#estado').change(function () {
        var title = $(this).val();
            if (document.getElementById('valid15').selected == "2") {
                $('#Modalanular').modal('show');
            }
            if (document.getElementById('valid16').selected == "2") {
                $('#ModalInactivar').modal('show');
            }
            if (document.getElementById('valid1').selected == "2") {
                $('#Modalaplicar').modal('show');
            }
});
</script>
@*cuendo el estado esta aplicado*@
<script>
    $('#estado').change(function () {
        var title = $(this).val();
            if (document.getElementById('valid15').selected == "1") {
                $('#Modalanular').modal('show');
            }
            if (document.getElementById('valid16').selected == "1") {
                $('#ModalInactivar').modal('show');
            }
            if (document.getElementById('valid1').selected == "1") {
                $('#Modalaplicar').modal('show');
            }
});
</script>

