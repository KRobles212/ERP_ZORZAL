@model ERP_ZORZAL.Models.tbEntradaDetalle
@using ERP_ZORZAL.Models
@{

}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ingresar Detalle Entrada</h5>

                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.ent_Id, "Numero Entrada", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("ent_Id", (IEnumerable<SelectListItem>)ViewBag.ent_Id, new { @class = "form-control" ,@readonly="readonly" })
                                    @Html.ValidationMessageFor(model => model.ent_Id)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("prod_Codigo", (IEnumerable<SelectListItem>)ViewBag.prod_Codigo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                                </div>
                                <div class="col-md-1">
                                    <input type="reset" value="Agregar" class="btn btn-primary" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.entd_Cantidad, "Cantidad", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.entd_Cantidad)
                                    @Html.ValidationMessageFor(model => model.entd_Cantidad)
                                </div>
                            </div>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@*PARA AGREGAR NUEVO PRODUCTO*@
<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
            </div>
            <div class="modal-body" id="frmEditarMunicipios">
                @Html.Partial("_BuscarProducto", (List<tbProducto>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>
