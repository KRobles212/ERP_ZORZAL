@model IEnumerable<ERP_GMEDINA.Models.tbProducto>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" class="form-control" placeholder="Ingresar Producto" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table id="Table_BuscarProducto" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Marca)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Modelo)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Marca)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Modelo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Talla)
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-sm" id="AgregarDetalleEntrada">Agregar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>



<script>
$(document).ready(function () {
        $('#Table_BuscarProducto').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
</script>