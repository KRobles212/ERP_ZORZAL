@model ERP_GMEDINA.Models.tbProductoCategoria
@using ERP_GMEDINA.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Producto Categoría</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                    @Html.LabelFor(model => model.pcat_Id, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        <input class="form-control" value="" readonly />
                                        @Html.ValidationMessageFor(model => model.pcat_Id)
                                    </div>
                                </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.pcat_Nombre, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.pcat_Nombre)
                                    @Html.ValidationMessageFor(model => model.pcat_Nombre)
                                </div>
                            </div>
                        </div>
                    }  
                </div>
            </div>
        </div>
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Agregar SubCategoría</h5>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">

                    @Html.Partial("_CreateSubCategoriaModal", new tbProductoSubcategoria())
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <input type="button" value="Guardar" class="btn btn-primary" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
