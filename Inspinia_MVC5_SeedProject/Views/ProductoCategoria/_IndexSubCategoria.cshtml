@model IEnumerable<ERP_ZORZAL.Models.tbProductoSubcategoria>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Producto Subcategoría</h5>
                </div>
                <div class="ibox-content">

                    <table class="table table-responsive" style="width:100%" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pscat_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbEstadoMovimiento.estm_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProductoCategoria.pcat_Nombre)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pscat_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbEstadoMovimiento.estm_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProductoCategoria.pcat_Nombre)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.pscat_Id }, new { @class = "btn btn-primary btn-sm" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.pscat_Id }, new { @class = "btn btn-white btn-sm" })
                                        <input type="button" id="boton" value="Inactivar" class="btn btn-success btn-xs">
                                        @*@Html.ActionLink("Delete", "Delete", new { id=item.pscat_Id }, new { @class = "btn btn-white btn-sm"})*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Bodegas').DataTable(
            {
                "searching": true,

                "oLanguage": {
                    "oPaginate": {
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior",
                    },
                    "sSearch": "Buscar",
                    "sLengthMenu": "Mostrar _MENU_ registros por página",
                    "sInfo": "Mostrando _START_ a _END_ Entradas",
                }
            });
    });

    $(document).ready(function () {
        $("#boton").click(function () {
            $("#boton").attr("value", "Activar");
        });
    });
</script>


