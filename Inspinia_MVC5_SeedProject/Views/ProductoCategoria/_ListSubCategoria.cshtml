@model IEnumerable<ERP_GMEDINA.Models.tbProductoSubcategoria>

@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Producto Subcategoría</h5>
					<div class="ibox-tools">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SubCategoria">
                            Registrar SubCategoría
                        </button>
					</div>
                </div>
                <div class="modal fade" id="SubCategoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crear SubCategoría</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                                    @Html.Partial("_CreateSubCategoria", new tbProductoSubcategoria())
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Guardar</button>
                </div>
            </div>
        </div>
    </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered" style="width:100%" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pscat_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pscat_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProductoCategoria.pcat_Nombre)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pscat_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pscat_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProductoCategoria.pcat_Nombre)
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalDetalles_@item.pscat_Id">
                                            Detalle
                                        </button>
                                        <button type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalEditar_@item.pscat_Id">
                                            Editar
                                        </button>
                                        <input type="button" id="boton" value="Inactivar" class="btn btn-white btn-xs">
                                    </td>
                                </tr>

                                <div class="modal fade" id="ModalDetalles_@item.pscat_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="form-group">
                                                            <div class="col-md-12">
                                                                @Html.Partial("_DetailsSubCategoria", new ERP_GMEDINA.Models.tbProductoSubcategoria() { pscat_Id = item.pscat_Id, pscat_Descripcion = item.pscat_Descripcion, pscat_EsActiva = item.pscat_EsActiva, pcat_Id = item.pcat_Id })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="ModalEditar_@item.pscat_Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-lg-14">
                                                        <div class="form-group">
                                                            <div class="col-md-18">
                                                                @Html.Partial("_EditSubCategoriaModal", new ERP_GMEDINA.Models.tbProductoSubcategoria() { pscat_Id = item.pscat_Id, pscat_Descripcion = item.pscat_Descripcion })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTables.js"></script>
<script src="~/Scripts/app/BusquedaGenerica.js"></script>