@model ERP_GMEDINA.Models.tbProductoSubcategoria
<style>
    .validation-error {
        color: red;
        font-size: small;
    }
</style>
@* CrearSubCategoria *@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear SubCategoría</h5>
                </div>

                <div class="form-group col-md-1">
                    <button class="btn btn-primary" type="button" id="AgregarSubCategoria">Añadir</button>
                </div>

                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                   
                                    @Html.EditorFor(model => model.pscat_Descripcion)
                                        <div id="DescripcionValidation">
                                            <p style="color:red">
                                                @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                                            </p>
                                         </div>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.pscat_EsActiva, "¿Activo?", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.CheckBox("¿Activo?", true)
                                    <div id="Estado">
                                            @Html.ValidationMessageFor(model => model.pscat_EsActiva)
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<table id="SubCategoria" class="table table table-striped">
    <thead>
        <tr>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/app/DataTable.js"></script>
