@model ERP_GMEDINA.Models.tbProductoSubcategoria
@using ERP_GMEDINA.Models
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear SubCategoría</h5>
                </div>

                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.pscat_Descripcion)
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.pscat_EsActiva, "¿Activo?", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.CheckBox("¿Activo?", true)
                                    @Html.ValidationMessageFor(model => model.pscat_EsActiva)
                                </div>
                            </div>

                        </div>
                    }

                </div>
            </div>
          
         </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script src="~/Scripts/app/Categoria.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
