@model IEnumerable<ERP_ZORZAL.Models.tbProductoCategoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Producto Categoría</h2>

        @*<ol class="breadcrumb">
            <li class="active">
                <strong>tbProductoCategoria</strong>
            </li>
        </ol>*@
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Producto Categoría</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary "})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-responsive" style="width:100%" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pcat_Nombre)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.pcat_UsuarioCrea)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pcat_FechaCrea)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pcat_UsuarioModifica)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pcat_FechaModifica)
                                </th>*@
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcat_Nombre)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.pcat_UsuarioCrea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcat_FechaCrea)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcat_UsuarioModifica)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pcat_FechaModifica)
                                    </td>*@
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.pcat_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.pcat_Id }, new { @class = "btn btn-white btn-xs" })
                                        @*@Html.ActionLink("Delete", "Delete", new { id = item.pcat_Id }, new { @class = "btn btn-white btn-sm" })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>

