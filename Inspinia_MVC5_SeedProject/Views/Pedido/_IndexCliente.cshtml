@model IEnumerable<ERP_GMEDINA.Models.tbCliente>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchCliente" type="text" class="form-control" placeholder="Ingresar Cliente" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
     
            <table class="table table-striped">
    <tr>
        <th>
            Número Cliente
            @*@Html.DisplayNameFor(model => model.clte_Id)*@
        </th>
        <th>
            RTN/Identidad/Pasaporte
            @*@Html.DisplayNameFor(model => model.clte_RTN_Identidad_Pasaporte)*@
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.clte_EsPersonaNatural)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.clte_Nombres)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.clte_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clte_Identificacion)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.clte_EsPersonaNatural)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.clte_Nombres)
        </td>

        <td>
			@*@Html.ActionLink("Details", "Details", new { id=item.clte_Id }, new { @class = "btn btn-primary btn-sm"})*@
            <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
            @*@Html.ActionLink("Seleccionar", "Create", new { id=item.clte_Id }, new { @class = "btn btn-primary btn-xs" })*@
            @*@Html.ActionLink("Delete", "Delete", new { id=item.clte_Id }, new { @class = "btn btn-white btn-sm"})*@
        </td>
    </tr>
}

</table>
                    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
                    <script>
    $(document).ready(function () {
        $('#tbCliente').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
                    </script>
                </div>
            </div>
        </div>
    </div>
 </div>



