@model IEnumerable<ERP_GMEDINA.Models.tbDenominacion>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchDenominacion" type="text" class="form-control" placeholder="Ingresar Denominacion" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="tbDenominacion" class="table table-striped table-bordered">
                            <thead>


                                <tr>
                                   
                                    <th>
                                        1
                                    </th>
                                    <th>
                                        1
                                    </th>
                                    <th>
                                      1
                                    </th>
                                    <th>
                                       1
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="TbdenominacionTBody">


                                @foreach (var item in Model)
                                {
                                    <tr data-id="@item.deno_Id" data-desc="@item.deno_Descripcion"  data-desc1="@item.deno_Tipo" >
                                       
                                        
                                         <td>
                                            @Html.DisplayFor(modelItem => item.deno_Descripcion)
                                        </td>
                                      
                                          @if (item.deno_Tipo == 1)
                {
                                            <td>Billete</td>
                                        }
                                        else
                                        {
                                            <td>Moneda</td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.deno_valor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbMoneda.mnda_Nombre)
                                        </td>
                                        <td>
                                            <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbDenominacion').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
</script>




