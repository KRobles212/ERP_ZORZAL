@model IEnumerable<ERP_ZORZAL.Models.tbBodega>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Bodegas</h2>
        @*<ol class="breadcrumb">
            <li class="active">
                <strong>Listado Bodega</strong>
            </li>
        </ol>*@
