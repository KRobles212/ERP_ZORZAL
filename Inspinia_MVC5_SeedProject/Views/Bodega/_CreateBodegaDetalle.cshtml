@model ERP_ZORZAL.Models.tbBodegaDetalle
@using ERP_ZORZAL.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.tbProducto.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Codigo)
                                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                                </div>
                                @Html.LabelFor(model => model.tbProducto.uni_Id, "Unidad Medida", new { @class = "control-label col-md-2" })
                                <div class="col-md-2">
                                    @Html.DropDownList("uni_Id", (IEnumerable<SelectListItem>)ViewBag.uni_Id, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                                </div>
                                <div class="col-md-1">
                                    <input type="reset" value="Agregar" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.tbProducto.pscat_Id, "Categoría ", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("pscat_Id", (IEnumerable<SelectListItem>)ViewBag.pscat_Id_Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.bodd_CostoPromedio)
                                </div>
                                @Html.LabelFor(model => model.tbProducto.pscat_Id, "Subcategoría ", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("pcat_Id", (IEnumerable<SelectListItem>)ViewBag.pcat_Id_Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.bodd_CostoPromedio)
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Punto Reorden</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " />
                                </div>
                                <label class="control-label col-md-2">Cantidad Mínima</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Cantidad Máxima</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " />
                                </div>
                                <label class="control-label col-md-2">Costo</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Costo Promedio</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control " />
                                </div>
                            </div>
                        </div>
                    }
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Código Producto</th>
                                    <th>Descripción Producto</th>
                                    <th>Categoría</th>
                                    @*<th>SubCategoría</th>*@
                                    <th>Punto Reorden</th>
                                    <th>Cantidad Mínima</th>
                                    <th>Cantidad Máxima</th>
                                    <th>Costo</th>
                                    <th>Costo Promedio</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th><input type="reset" value="-" class="btn btn-danger btn-xs" /></th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th><input type="reset" value="-" class="btn btn-danger btn-xs" /></th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th><input type="reset" value="-" class="btn btn-danger btn-xs" /></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                    <div class="ibox-content">
                        <div class="form-group">
                            <div class="col-md-offset-9 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalImprimir">
                                    Aplicar
                                </button>
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalImprimir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Aplicar Cambios</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Aplicar Cambios?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Create","Bodega")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
            </div>
            <div class="modal-body" id="frmEditarMunicipios">
                @Html.Partial("_BuscarProducto", (List<tbProducto>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>



