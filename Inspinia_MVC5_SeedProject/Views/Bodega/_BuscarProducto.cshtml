@model IEnumerable<ERP_GMEDINA.Models.tbProducto>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Productos</h5>
                </div>
                <div class="ibox-content">
                    <input type="text" id="search" placeholder="Buscar Productos" class="form-control" />
                     <table id="Table_BuscarProducto" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Marca)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prod_Modelo)
                                </th>
                                <th>Acciones
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr  tr data-id="@item.prod_Codigo">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Marca)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Modelo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Talla)
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-xs" value="@item.prod_Codigo" id="seleccionar" data-dismiss="modal">Agregar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


