@model IEnumerable<ERP_GMEDINA.Models.tbListaPrecio>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
               <div class="ibox-content">
                   <div class="ibox-title">
                       <div class="form-group">
                           <div class="col-md-12">
                               <input id="searchListaPrecio" type="text" class="form-control" placeholder="Ingresar Listado Precio" />
                               <br />
                           </div>
                       </div>
                   </div>
                    <table id="tbListaPrecio" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_Nombre)
                                </th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        
                        <tbody id="ListaPrecioTbody">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_Nombre)
                                    </td>
                                    <td>
                                        <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbListaPrecio').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
</script>