@model IEnumerable<ERP_GMEDINA.Models.tbFactura>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Factura</h2>

    </div>
    <div class="title-action">
        <a href="@Url.Action("Index","Factura")">Regresar</a>
    </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Factura por pagar</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-1">RTN</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control " />
                            </div>
                            <label class="control-label col-md-2">Número Factura</label>
                            <div class="col-md-3">
                                <input id="FechaBuscar" type="text" class="form-control" />
                            </div>
                            <div class="">
                                <input type="button" value="Buscar" class="btn btn-primary btn-sm" />
                            </div>
                        </div>

                    </div>
                        <table id="DataTable1" class="table table table-striped  table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.fact_Codigo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.fact_Fecha)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.clte_Nombres)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.clte_Identificacion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.cja_Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.esfac_Id)
                                    </th>
                                    <th> Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.esfac_Id == 2)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact_Codigo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact_Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.clte_Nombres)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.clte_Identificacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.tbCaja.cja_Descripcion)
                                            </td>
                                            <td class="danger">
                                                @Html.DisplayFor(model => item.tbEstadoFactura.esfac_Descripcion)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Detalle", "Details", new { id = item.fact_Id }, new { @class = "btn btn-primary btn-xs" })
                                                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalCancelar">
                                                    Cancelar
                                                </button>
                                            </td>

                                        </tr>
                                    }

                                }
</tbody>
                        </table>

                    </div>

                </div>
        </div>
    </div>
 </div>



<div class="modal fade" id="ModalCancelar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cancelar Factura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea cancelar el saldo de la Factura?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","Factura")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/Datepicker.js"></script>
<script src="~/Scripts/app/DataTableBusquedaGenerica.js"></script>