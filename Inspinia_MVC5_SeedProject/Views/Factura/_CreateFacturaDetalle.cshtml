@model ERP_GMEDINA.Models.tbFacturaDetalle
@using ERP_GMEDINA.Models
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prod_Codigo)
                                <div id="validationCodigoProductoCreate">
                                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                            @Html.LabelFor(model => model.factd_MontoDescuento, new { @class = "control-label col-md-2" })
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.factd_MontoDescuento)
                                <div id="validationMontoDescuentoCreate">
                                    @Html.ValidationMessageFor(model => model.factd_MontoDescuento)
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary" type="button" id="AgregarDetalleFactura">Añadir</button>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.tbProducto.prod_Descripcion, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.tbProducto.prod_Descripcion)
                                <div id="validationDescripcionProductoCreate">
                                    @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                                </div>
                            </div>
                            @*@Html.LabelFor(model => model.factd_PorcentajeDescuento, new { @class = "control-label col-md-3" })
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.factd_PorcentajeDescuento)
                                <div id="validationPorcentajeDescuentoCreate">
                                    @Html.ValidationMessageFor(model => model.factd_PorcentajeDescuento)
                                </div>
                            </div>*@
                            <label class="control-label col-md-3">Subtotal</label>
                            <div class="col-md-2">
                                <input id="Subtotal" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.factd_Cantidad, new { @class = "control-label col-md-2" })
                            <div class="col-md-2">
                                @Html.EditorFor(model => model.factd_Cantidad)
                                <div id="validationCantidadProductoCreate">
                                    @Html.ValidationMessageFor(model => model.factd_Cantidad)
                                </div>
                            </div>
                            @Html.LabelFor(model => model.factd_Impuesto, new { @class = "control-label col-md-5" })
                            <div class="col-md-2">
                                @*@Html.EditorFor(model => model.factd_Impuesto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })*@
                                <input type="text" value="15%" class="form-control " readonly />
                                <div id="validationImpuestoProductoCreate">
                                    @Html.ValidationMessageFor(model => model.factd_Impuesto)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Precio Unitario</label>
                            <div class="col-md-2">
                                <input id="PrecioUnitario" type="text" class="form-control " />
                            </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<table id="tblDetalleFactura" class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>ID Producto</th>
            <th>Descripción Producto</th>
            <th>Cantidad</th>
            <th>Valor Unit.</th>
            <th>Descuento</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>Sub-Total</th>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>ISV %</th>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th>Total a Pagar</th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
</table>
<div id="validationSummary">
    <p style="color:red"></p>
</div>
<div>
    <div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
                </div>
                <div class="modal-body" id="frmEditarMunicipios">
                    @Html.Partial("_IndexProducto", (List<tbProducto>)ViewBag.Producto)
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/CalculoFactura.js"></script>