@model ERP_ZORZAL.Models.tbFacturaDetalle
@using ERP_ZORZAL.Models
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                                <div class="col-md-4 ">
                                    @Html.EditorFor(model => model.prod_Codigo)
                                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                                <label class="control-label col-md-3">Precio Unitario</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " />
                                </div>
                                <div class="col-md-1">
                                    <input type="reset" value="Añadir" class="btn btn-primary" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.tbProducto.prod_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.tbProducto.prod_Descripcion)
                                    @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                                </div>
                                @Html.LabelFor(model => model.factd_PorcentajeDescuento, new { @class = "control-label col-md-3" })
                                <div class="col-md-2">
                                    <input class="form-control" value="" />
                                    @Html.ValidationMessageFor(model => model.factd_PorcentajeDescuento)
                                </div>

                            </div>

                            <div class="form-group">

                                @Html.LabelFor(model => model.factd_Cantidad, new { @class = "control-label col-md-2" })
                                <div class="col-md-2">
                                    <input class="form-control" value="" />
                                    @Html.ValidationMessageFor(model => model.factd_Cantidad)
                                </div>
                                <label class="control-label col-md-5">Subtotal</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " />
                                </div>
                            </div>
                        </div>
                    }
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID Producto</th>
                                    <th>Descripción Producto</th>
                                    <th>Cantidad</th>
                                    <th>Valor Unit.</th>
                                    <th>Descuento</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>Sub-Total</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>ISV %</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>Total a Pagar</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Agregar Producto</h4>
                </div>
                <div class="modal-body" id="frmEditarMunicipios">
                    @Html.Partial("_IndexProducto", (List<tbProducto>)ViewBag.Producto)
                </div>
            </div>
        </div>
    </div>
</div>
