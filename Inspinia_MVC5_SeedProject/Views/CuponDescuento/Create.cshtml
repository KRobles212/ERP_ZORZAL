                var descuento = $('#cdto_PorcentajeDescuento').val();
                var valormax = $('#cdto_MaximoMontoDescuento').val();
                var resultado = valormax -(((descuento) / 100) * valormax);

                $('#cdto_MontoDescuento').val(resultado);
            //}
        });
    //});
</script>

}
 
