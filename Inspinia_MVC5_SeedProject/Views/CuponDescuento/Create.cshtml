@model ERP_GMEDINA.Models.tbCuponDescuento

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cupón Descuento</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Cupón Descuento</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.tbSucursal.suc_Id, "Sucursal", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.tbSucursal.suc_Descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                 @*@Html.DropDownList("suc_Id", String.Empty)*@
                @Html.ValidationMessageFor(model => model.tbSucursal.suc_Descripcion)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_PorcentajeDescuento, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.cdto_PorcentajeDescuento, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" } })
                <p style="color:red">@Html.ValidationMessageFor(model => model.cdto_PorcentajeDescuento)</p>
</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_MontoDescuento, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.cdto_MontoDescuento, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" } })
                <p style="color:red">@Html.ValidationMessageFor(model => model.cdto_MontoDescuento)</p>
</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_MaximoMontoDescuento, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <input type="number" value="1000" class="form-control" id="cdto_MaximoMontoDescuento" readonly/>
                @*@Html.EditorFor(model => model.cdto_MaximoMontoDescuento, new { htmlAttributes = new { @type = "text", @value="10000", @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.cdto_MaximoMontoDescuento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_Anulado, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                <select id="cdto_Anulado" class="form-control">
                    <option>Seleccionar</option>
                    <option value="true">Si</option>
                    <option value="false">No</option="false">
                </select>
                @*@Html.DropDownList("tpi_Id", null, "Seleccione Tipo Identificación", new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.cdto_Anulado)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_Redimido, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.cdto_Redimido)
                @Html.ValidationMessageFor(model => model.cdto_Redimido)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_FechaEmision, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.cdto_FechaEmision, "{0:dd-MM-yyyy}")
                <p style="color:red">@Html.ValidationMessageFor(model => model.cdto_FechaEmision)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cdto_FechaVencimiento, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.cdto_FechaVencimiento, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" }  })
                @Html.ValidationMessageFor(model => model.cdto_FechaVencimiento)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
 $.datepicker.regional['es'] = {
 closeText: 'Cerrar',
 prevText: '< Ant',
 nextText: 'Sig >',
 currentText: 'Hoy',
 monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
 monthNamesShort: ['Ene','Feb','Mar','Abr', 'May','Jun','Jul','Ago','Sep', 'Oct','Nov','Dic'],
 dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
 dayNamesShort: ['Dom','Lun','Mar','Mié','Juv','Vie','Sáb'],
 dayNamesMin: ['Do','Lu','Ma','Mi','Ju','Vi','Sá'],
 weekHeader: 'Sm',
 dateFormat: 'dd/mm/yy',
 firstDay: 1,
 isRTL: false,
 showMonthAfterYear: false,
 yearSuffix: ''
 };
 $.datepicker.setDefaults($.datepicker.regional['es']);
$(function () {
    $("#cdto_FechaEmision").datepicker({ dateFormat: 'dd-mm-yy' });
    $("#cdto_FechaVencimiento").datepicker({ dateFormat: 'dd-mm-yy' });
});
    </script>
<script>
    $('#cdto_FechaEmision').change(function () {
        var FechaEmision = $('#cdto_FechaEmision').val();
        var FormatFechaNacimiento = new Date((FechaEmision));
        var vencimiento = (FormatFechaNacimiento.getMonth()+1)  + '-' + FormatFechaNacimiento.getDate() + '-' + (FormatFechaNacimiento.getFullYear() + 1);
        $('#cdto_FechaVencimiento').val(vencimiento);
    });
</script>

<script type="text/javascript">
    $('#cdto_PorcentajeDescuento').click(function () {
        $('#cdto_MontoDescuento').val('')
        $('#cdto_MaximoMontoDescuento').val('1000')
    });
</script>

<script type="text/javascript">
    $('#cdto_MontoDescuento').click(function () {
        $('#cdto_PorcentajeDescuento').val('0')
        $('#cdto_MaximoMontoDescuento').val('0')
    });
</script>
