@model IEnumerable<ERP_ZORZAL.Models.tbCuponDescuento>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cupón Descuento</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista Cupón Descuento</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Cupón Descuento", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover" id="DataTable">
    <thead>
        <tr>
            <th>
                Sucursal
                @*@Html.DisplayNameFor(model => model.tbSucursal.mun_Codigo)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_MontoDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_MaximoMontoDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_Anulado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_Redimido)
            </th>
           
            <th>Opción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    San Pedro Sula
                    @*@Html.DisplayFor(modelItem => item.tbSucursal.mun_Codigo)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_PorcentajeDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_MontoDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_MaximoMontoDescuento)
                </td>
                <td>
                    No
                    @*@Html.DisplayFor(modelItem => item.cdto_Anulado)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_Redimido)
                </td>
               
                <td>
                    @Html.ActionLink("Imprimir", "", null, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Anular", "", null, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>

