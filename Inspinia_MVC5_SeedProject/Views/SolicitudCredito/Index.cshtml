@model IEnumerable<ERP_GMEDINA.Models.tbSolicitudCredito>

@{
    ViewBag.Title = "SC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Solicitud de Crédito</h2>

    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Solicitud de Crédito</h5>
					<div class="ibox-tools">
                        @Html.ActionLink("Solicitudes por autorizar", "IndexSolicitud", null, new { @class = "btn btn-primary btn-xs" })
						@Html.ActionLink("Registrar Solicitud Crédito", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table id="DataTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cred_FechaSolicitud)
            </th>
            <th>
                Identificación Cliente
                @*@Html.DisplayNameFor(model => model.tbCliente.clte_RTN_Identidad_Pasaporte)*@
            </th>
            <th>
                Nombre Cliente
                @*@Html.DisplayNameFor(model => model.tbCliente.clte_RTN_Identidad_Pasaporte)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cred_FechaAprobacion)
            </th>

          
            <th>
                @Html.DisplayNameFor(model => model.cred_MontoSolicitado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cred_MontoAprobado)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.cred_DiasSolicitado)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.cred_DiasAprobado)
            </th>

            <th>
                Estado 
                @*@Html.DisplayNameFor(model => model.tbEstadoSolicitudCredito.escre_Descripcion)*@
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaSolicitud)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCliente.clte_RTN_Identidad_Pasaporte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCliente.clte_Nombres )
                    @Html.DisplayFor(modelItem => item.tbCliente.clte_Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_FechaAprobacion)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.cred_MontoSolicitado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cred_MontoAprobado)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.cred_DiasSolicitado)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.cred_DiasAprobado)
                </td>
     
             
                <td>
                    @Html.DisplayFor(modelItem => item.tbEstadoSolicitudCredito.escre_Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.cred_Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.cred_Id }, new { @class = "btn btn-white btn-xs" })
                    <a href="@Url.Action("IndexFacturaPagar", "Factura")" class="btn btn-primary btn-xs">Registrar Liquidacion</a>
        
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
