@model IEnumerable<ERP_GMEDINA.Models.tbSolicitudCredito>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Solicitud Credito</h2>

    </div>
    <div class="title-action">
        <a href="@Url.Action("Index","SolicitudCredito")">Regresar</a>
    </div>

</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Solicitud Credito Por Autorizar</h5>

                </div>
                <div class="ibox-content">

                    <table id="DataTable1" class="table table table-striped  table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Nombre Cliente
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.tbCliente.clte_Identificacion)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.cred_FechaAprobacion)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.cred_MontoAprobado)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.cred_DiasAprobado)
                                </th>

                                
                                <th>
                                    @Html.DisplayNameFor(model => model.tbEstadoSolicitudCredito.escre_Descripcion)
                                </th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.escre_Id == 1)
                                     {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbCliente.clte_Nombres)
                                            @Html.DisplayFor(modelItem => item.tbCliente.clte_Apellidos)


                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbCliente.clte_Identificacion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cred_FechaAprobacion)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.cred_MontoAprobado)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.cred_DiasAprobado)
                                        </td>


                                        <td class="danger">
                                            @Html.DisplayFor(modelItem => item.tbEstadoSolicitudCredito.escre_Descripcion)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Detalle", "Details", new { id = item.cred_Id }, new { @class = "btn btn-primary btn-xs" })
                                            <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalAutorizar">
                                                Autorizar Crédito
                                            </button>
                                        </td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>

<div class="modal fade" id="ModalAutorizar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Autorizar Credito</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Esta seguro de Autorizar el Crédito?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","SolicitudCredito")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/Datepicker.js"></script>
<script src="~/Scripts/app/DataTableBusquedaGenerica.js"></script>