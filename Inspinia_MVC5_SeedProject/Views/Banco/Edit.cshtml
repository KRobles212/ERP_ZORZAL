@model ERP_ZORZAL.Models.tbBanco

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 50%;
        margin-left:17%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Banco</h2>
      @*<ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>*@
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Banco")">Regresar</a>
			@*@Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary"})*@
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Banco</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.ban_Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.ban_Nombre, new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.ban_Nombre)
                                @Html.ValidationMessageFor(model => model.ban_Nombre)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ban_NombreContacto, new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.ban_NombreContacto)
                                @Html.ValidationMessageFor(model => model.ban_NombreContacto)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ban_TelefonoContacto, new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.ban_TelefonoContacto)
                                @Html.ValidationMessageFor(model => model.ban_TelefonoContacto)
                            </div>
                        </div>

                        <div class="form-group">
                            <table>
                                <tr>
                                    <th></th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                </tr>
                                <tr>
                                    <td>Creado</td>
                                    <td>@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                                    <td>@Html.DisplayFor(model => model.ban_FechaCrea)</td>
                                </tr>
                                <tr>
                                    <td>Modificado</td>
                                    <td>@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                                    <td>@Html.DisplayFor(model => model.ban_FechaModifica)</td>
                                </tr>
                            </table>
                        </div>
   
                        <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                            }


                        </div>
                    </div>
        </div>
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
