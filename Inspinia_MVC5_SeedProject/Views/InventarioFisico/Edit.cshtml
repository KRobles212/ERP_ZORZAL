@model ERP_GMEDINA.Models.tbInventarioFisico

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Inventario Fisico</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Editar Inventario Fisico</h5>
                    </div>
                    <div class="ibox-content">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.invf_Id)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.invf_FechaInventario, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.invf_FechaInventario, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @id = "boxFechaCrea" } })
                                        @Html.ValidationMessageFor(model => model.invf_FechaInventario)
                                    </div>

                                    @Html.LabelFor(model => model.bod_Id, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.DropDownList("bod_Id", (IEnumerable<SelectListItem>)ViewBag.bod_Id, "Seleccione", new { @class = "form-control" })
                                        @*@Html.DropDownList("bod_Id", (IEnumerable<SelectListItem>)ViewBag.bod_Id, new { @class = "form-control" })*@
                                        @Html.ValidationMessageFor(model => model.bod_Id)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.invf_Descripcion, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.invf_Descripcion)
                                        @Html.ValidationMessageFor(model => model.invf_Descripcion)
                                    </div>

                                    @Html.LabelFor(model => model.invf_ResponsableBodega, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.invf_ResponsableBodega)
                                        @Html.ValidationMessageFor(model => model.invf_ResponsableBodega)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.estif_Id, "Estado Inventario Fisico", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                       @Html.DropDownList("estif_Id", (IEnumerable<SelectListItem>)ViewBag.estif_Id, new { @class = "form-control" })
                                       @Html.ValidationMessageFor(model => model.estif_Id)
                                    </div>
                                </div>
                              

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
                                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                    </div>
                                </div>
                            </div>
                        }

              @* Clase parcial de el index del Inventario Fisico Detalle *@
                            @Html.Partial("_IndexInvFisicoDetalle", Model.tbInventarioFisicoDetalle)
     

                        @* Tabla de los datos de auditoria *@
                        <div class="ibox-content">
                            <table class="table table-striped">
                                <tr>
                                    <th>
                                        Acción
                                    </th>
                                    <th>
                                        Usuario
                                    </th>
                                    <th>
                                        Fecha
                                    </th>
                                   
                                </tr>

                                <tr>
                                    <td>
                                        Creado
                                    </td>
                                    <td>
                                        @ViewBag.UsuarioCrea 
                                    </td>
                                    <td>

                                        @Html.DisplayFor(model => model.invf_FechaCrea)
                                    </td>
                       
                                </tr>
                                <tr>
                                    <td>
                                        Modificado
                                    </td>
                                    <td>
                                        @ViewBag.UsuarioModifica
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.invf_FechaModifica)
                                    </td>
                                  
                                </tr>

                            </table>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>


