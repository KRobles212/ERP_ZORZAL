<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Inventario Fisico</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label class="control-label col-md-2">Fecha Levantamiento</label>
                                <div class="col-md-10">
                                    <input type="date" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Bodega</label>
                                <div class="col-md-10">
                                    <select id="Select1" class="form-control">
                                        <option>--Seleccione Bodega--</option>
                                        <option>Bodega #1</option>
                                        <option>Bodega #2</option>
                                        <option>Bodega #3</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Responsable Bodega</label>
                                <div class="col-md-10">
                                    <input class="text-box single-line ">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Descripcion</label>
                                <div class="col-md-10">
                                    <input class="text-box single-line ">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-content" id="Crear">
                                            @*@Html.Partial("_CreateInstructorCasosExitos", new InstructorCasosExitos())*@
                                            @Html.Partial("_CreateInvFisicoDetalle", new ERP_ZORZAL.Models.tbInventarioFisicoDetalle())
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

