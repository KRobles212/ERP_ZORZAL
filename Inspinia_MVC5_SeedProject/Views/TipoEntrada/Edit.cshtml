@model ERP_ZORZAL.Models.tbTipoEntrada

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tipo Entrada</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Tipo Entrada</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.tent_Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.tent_Id, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.tent_Id)
                                    @Html.ValidationMessageFor(model => model.tent_Id)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.tent_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.tent_Descripcion)
                                    @Html.ValidationMessageFor(model => model.tent_Descripcion)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-6">
                                    <table class="table table-responsive" style="width:100%" id="TipoEntrada">
                                        <tr>
                                            <th></th>
                                            <th>Usuario</th>
                                            <th>Fecha</th>
                                        </tr>
                                        <tr>
                                            <td>Creado</td>
                                            <td>@Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                                            <td>@Html.DisplayFor(model => model.tent_FechaCrea)</td>
                                        </tr>
                                        <tr>
                                            <td>Modificado</td>
                                            <td>@Html.DisplayFor(model => model.tbUsuario.usu_NombreUsuario)</td>
                                            <td>@Html.DisplayFor(model => model.tent_FechaModifica)</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#TipoEntrada').DataTable(
            {
                "searching": true,

                "oLanguage": {
                    "oPaginate": {
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior",
                    },
                    "sSearch": "Buscar",
                    "sLengthMenu": "Mostrar _MENU_ registros por página",
                    "sInfo": "Mostrando _START_ a _END_ Entradas",
                }
            });
    });
</script>
