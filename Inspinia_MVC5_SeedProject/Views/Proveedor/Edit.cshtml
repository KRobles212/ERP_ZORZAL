@model ERP_GMEDINA.Models.tbProveedor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Proveedores</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Proveedores</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.prov_Id)
                        @Html.HiddenFor(model => model.prov_FechaCrea)

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.prov_Id, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.prov_Id)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_Nombre, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prov_Nombre, new { @class = "textbox single-line" })
                                <p style="color:red;">@Html.ValidationMessageFor(model => model.prov_Nombre)</p>
</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_NombreContacto, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prov_NombreContacto, new { @class = "textbox single-line" })
                                <p style="color:red;">@Html.ValidationMessageFor(model => model.prov_NombreContacto)</p>
</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_Direccion, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.prov_Direccion, new { @class = "form-control" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.prov_Direccion)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_Email, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prov_Email, new { @class = "textbox single-line" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.prov_Email)</p>
</div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.prov_Telefono, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prov_Telefono, new { @class = "textbox single-line" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.prov_Email)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div>
                        </div>
                    </div>
                    }


                </div>
            
                <div class="ibox-content">
                    <table class="table table-striped">
                        <tr>
                        <th>Acción</th>
                        <th>Usuario</th>
                        <th> Fecha</th>
                        </tr>
                        @*@foreach (var item in Model) { }*@
                        <tr>
                            <td>Creado por  </td>
                            <td>
                                @ViewBag.UsuarioCrea
                            </td>
                            <td>@Html.DisplayFor(model => model.prov_FechaCrea)</td>                             
                       
                        </tr>
                        <tr>
                            <td>Modificado por</td>
                            <td>
                                @ViewBag.UsuarioModifica
                            </td>
                            <td> @Html.DisplayFor(model => model.prov_FechaModifica)</td>
                       
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/ValidationNumber.js"></script>

