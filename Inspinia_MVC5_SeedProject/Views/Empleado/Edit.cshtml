        @Html.HiddenFor(model => model.emp_UsuarioModifica)
        @Html.HiddenFor(model => model.emp_FechaModifica)

        <div class="form-group">
            @Html.LabelFor(model => model.emp_Nombres, new { @class = "control-label col-md-2" })
