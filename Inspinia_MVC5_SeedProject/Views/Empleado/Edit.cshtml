                @Html.EditorFor(model => model.emp_Nombres)
                @Html.ValidationMessageFor(model => model.emp_Nombres)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.emp_Apellidos, new { @class = "control-label col-md-2" })
