@model ERP_GMEDINA.Models.tbSalida
@using ERP_GMEDINA.Models
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Crear</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar", "Index", @*null,*@ new { @class = "btn btn-primary btn-sm" })
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Salida</h5>
                </div>
                <div class="ibox-content">

            @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                        @using (Html.BeginForm("Create", "Salida", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {       @*@Html.AntiForgeryToken()*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.sal_FechaElaboracion, "Fecha de Elaboración",new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.sal_FechaElaboracion, "{0:yyyy-MM-dd}", new { htmlAttributes = new {@id = "FechaElaboracionSalida" } })
                                    @Html.ValidationMessageFor(model => model.sal_FechaElaboracion)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bod_Id, "Nombre de Bodega", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("bod_Id", (IEnumerable<SelectListItem>)ViewBag.bod_Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.bod_Id)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.estm_Id, "Estado", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("estm_Id", (IEnumerable<SelectListItem>)ViewBag.estm_Descripcion, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.estm_Id)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.box_Codigo, "Caja", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("box_Codigo", (IEnumerable<SelectListItem>)ViewBag.box_Codigo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.estm_Id)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.tsal_Id, "Tipo de Salida", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("tsal_Id", (IEnumerable<SelectListItem>)ViewBag.tsal_Id, "Seleccion", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.tsal_Id)
                                </div>
                            </div>

                            <div id="Venta" style="display:none">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.fact_Id, "Factura", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.DropDownList("fact_Id", (IEnumerable<SelectListItem>)ViewBag.fact_Id, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.estm_Id)
                                    </div>
                                </div>
                            </div>

                            <div id="Devolucion" style="display:none">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.sal_RazonDevolucion, new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.sal_RazonDevolucion)
                                        @Html.ValidationMessageFor(model => model.sal_RazonDevolucion)
                                    </div>
                                </div>
                            </div>

                                @* Llama la vista  *@
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="ibox float-e-margins">
                                            <div class="ibox-title">
                                                <div class="title-action">
                                                    <h5>Detalle Salida</h5>
                                                </div>
                                            </div>
                                            <div class="ibox-content" id="_CreateSalidadDetalle">
                                                @*@Html.Partial("_CreateInstructorCasosExitos", new InstructorCasosExitos())*@
                                                @Html.Partial("_CreateSalidadDetalle", Model)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*botones*@
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-primary" />
                                        <input type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAplicar" value="Aplicar" />
                                       @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                    </div>
                                </div>

                        }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@*modal para Aplicar*@
<div class="modal fade" id="ModalAplicar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Aplicar Salida</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Aplicar Salida?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Create", "Salida")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/app/SalidaDetalle.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script src="~/Scripts/app/Datepicker.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/app/MostrarCamposSalida.js"></script>
   
}
