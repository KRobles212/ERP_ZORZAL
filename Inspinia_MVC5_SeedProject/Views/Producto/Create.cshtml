@model ERP_GMEDINA.Models.tbProducto


@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Producto</h2>
    </div>

    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Producto")">Regresar</a>
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Producto</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)


                        
                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Codigo, new { @class = "control-label col-md-2 " })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Codigo,new { @class = "form-control" })                                   
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Codigo)</p>
                                </div>
                          
                                @Html.LabelFor(model => model.prod_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Descripcion, new { @class = "form-control" })                                   
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Descripcion)</p>
                                </div>
                            </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.pscat_Id, "Categoria", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">

                                @Html.DropDownList("pcat_Id", (IEnumerable<SelectListItem>)ViewBag.pcat_Id, "Seleccione una Categoria", new { @class = "form-control" })
                            </div>
                            @Html.LabelFor(model => model.pscat_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownList("pscat_Id", (IEnumerable<SelectListItem>)ViewBag.pscat_Id, "Seleccione una Subcategoria", new { @class = "form-control" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.pscat_Id)</p>
                            </div>

                        </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Marca, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Marca, new { @class = "form-control col-md" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Marca)</p>
                                </div>
                               @Html.LabelFor(model => model.prod_Modelo, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prod_Modelo, new { @class = "form-control" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Modelo)</p>
                            </div>
                              
                                
                            </div>
                           
                            <div class="form-group">
                                
                                @Html.LabelFor(model => model.prod_Color, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Color, new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Color)</p>
                                </div>
                            
                                @Html.LabelFor(model => model.prod_Talla, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Talla, new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Talla)</p>
                                </div>
                            </div>
                            <div class="form-group">
                               
                                @Html.LabelFor(model => model.uni_Id, "Unidad Medida", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.DropDownList("uni_Id", (IEnumerable<SelectListItem>)ViewBag.uni_Id, "Seleccione una Unidad", new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.uni_Id)</p>
                                </div> 
                            </div>
                      
                        <div class="form-group">
                            
                            <div class="col-lg-12">
                                <br /><br />
                                <center>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </center>

                            </div>
                        </div>
                        </div>
                        }

                    </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/app/search.js"></script>
}