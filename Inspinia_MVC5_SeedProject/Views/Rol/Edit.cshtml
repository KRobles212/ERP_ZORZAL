@model ERP_GMEDINA.Models.tbRol

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Rol", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Rol</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Rol</h5>
                </div>
                <div class="ibox-content">

                    

                        <div class="form-horizontal">


                            <div class="form-group">
                                @Html.LabelFor(model => model.rol_Id, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.rol_Id, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.rol_Id)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.rol_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.rol_Descripcion)
                                    @Html.ValidationMessageFor(model => model.rol_Descripcion)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.rol_Estado, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @*@Html.DropDownList("DropDownListEstado",(List<SelectListItem>)ViewBag.ListEstado)*@
                                    @*@Html.DropDownListFor(model => model.rol_Estado, (List<SelectListItem>)ViewBag.ListEstado, new { @class = "form-control" })*@
                                    @if (Model.rol_Estado == true)
                                    {
                                        @*@Html.ActionLink("Inactivar", "EstadoRol", new { @class = "btn btn-primary btn-xs" })*@
                                        <button class="btn btn-danger btn-xs" id="Inactivar">Inactivar</button>
                                    }
                                    else
                                    {
                                        @*@Html.ActionLink("Activar", "EstadoRol", new { @class = "btn btn-primary btn-xs" })*@
                                        <button class="btn btn-primary btn-xs" id="Activar">Activar</button>
                                    }
                                    @Html.ValidationMessageFor(model => model.rol_Estado)
                                    
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <input type="submit" value="Guardar" class="btn btn-primary" onclick="GetEstado();" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    
                </div>
            </div>
                        
                    </div>

                </div>
            </div>
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                Acción
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th>
                                Fecha
                            </th>
                        </tr>

                        <tr>
                            <td>
                                Creado por
                            </td>
                            <td>

                                @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.rol_FechaCrea)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Modificado por
                            </td>
                            <td>
                                @if (Convert.ToString(Model.rol_FechaModifica) == "")
                                {

                                }
                                else
                                {
                                    Html.DisplayFor(model => model.tbUsuario.usu_Nombres);
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.rol_FechaModifica)
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
}
