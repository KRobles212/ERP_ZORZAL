@model ERP_GMEDINA.Models.tbRol

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Rol</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalle Rol</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.rol_Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.rol_Id)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.rol_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.rol_Descripcion)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.rol_Estado)
                        </dt>

                        @if (Model.rol_Estado == true)
                        {
                            <dd>Activo</dd>
                        }
                        @if (Model.rol_Estado == false)
                        {
                            <dd>Inactivo</dd>

                        }
                    </dl>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                @Html.ActionLink("Editar", "Edit", new { id = Model.rol_Id }, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
                    
                </div>
<div class="ibox float-e-margins">

    <div class="ibox-content">
        <table class="table table-striped">
            <tr>
                <th>
                    Acción
                </th>
                <th>
                    Usuario
                </th>
                <th>
                    Fecha
                </th>
            </tr>

            <tr>
                <td>
                    Creado por
                </td>
                <td>
                    @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                    @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(model => model.rol_FechaCrea)
                </td>
            </tr>
            <tr>
                <td>
                    Modificado por
                </td>
                <td>
                    @*@if (Convert.ToString(Model.rol_FechaModifica) == "")
                    {

                    }
                    else
                    {
                        @ViewBag.UsuarioModifica
                    }*@
                    @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                    @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(model => model.rol_FechaModifica)
                </td>
            </tr>

        </table>
    </div>
</div>


